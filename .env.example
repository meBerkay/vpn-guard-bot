# --- MAIL SERVER SETTINGS ---
IMAP_SERVER=mail.example.com
IMAP_PORT=993
SMTP_SERVER=mail.example.com
SMTP_PORT=587

# --- ACCOUNT CREDENTIALS ---
EMAIL_USER=siem_alert@example.com
EMAIL_PASS=YourSecretPassword!

# --- SENDER & DOMAIN ---
# The email address that appears as the sender
SENDER_ADDR=vpn_security@example.com
# The email address where replies should go
REPLY_TO_ADDR=vpn_reply@example.com
# Company domain to append to usernames (e.g. user -> user@company.com)
COMPANY_DOMAIN=@example.com

# --- LOGIC SETTINGS ---
# How often to check inbox (seconds)
POLL_INTERVAL=60
# How long to wait for user reply before kicking (seconds)
WAIT_TIME_SECONDS=120
# Exact subject line coming from SIEM/Log Server (Case Insensitive)
TARGET_SUBJECT=VPN access

# --- FIREWALL (ACTIVE RESPONSE) ---
FG_IP=192.168.1.1
FG_USER=admin_automation
FG_PASS=FirewallPassword!
FG_SSH_PORT=22
